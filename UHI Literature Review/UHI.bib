keywords = {Cooling effect,Integrated catchment-based eco-hydrology model,Urban heat island,Water-holding pavements},
number = {2},
pages = {57--67},
publisher = {Elsevier B.V.},
title = {{Cooling effect of water-holding pavements made of new materials on water and heat budgets in urban areas}},
