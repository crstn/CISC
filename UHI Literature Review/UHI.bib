journal = {Climate Research},
keywords = {Climate-sensitive urban design,Coastal city structure,Tropical climate,Urban geometry,Urban heat island},
number = {3},
pages = {189--200},
title = {{Influence of urban morphology and sea breeze on hot humid microclimate: The case of Colombo, Sri Lanka}},
volume = {30},
year = {2006}
}
