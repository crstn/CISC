journal = {Science of the Total Environment},
keywords = {Energy balance,Heat storage,Urban heat island},
number = {1-3},
pages = {1--13},
pmid = {16443256},
title = {{A canopy layer model and its application to Rome}},
volume = {364},
year = {2006}
