number = {11},
pages = {3006--3012},
pmid = {66230854},
publisher = {Elsevier B.V.},
title = {{Cool roofs impact on building thermal response: A French case study}},
url = {http://dx.doi.org/10.1016/j.enbuild.2011.07.017},
