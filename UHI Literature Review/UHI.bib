journal = {Solar Energy},
keywords = {Asymmetry,ENVI-met,Gallery,Hot-dry climate,Human thermal comfort,Numerical modelling,Overhangs,Physiologically equivalent temperature PET,Shading device,Street design,Urban canyon},
number = {6},
pages = {742--754},
title = {{Effects of asymmetry, galleries, overhanging fa{\c{c}}ades and vegetation on thermal comfort in urban street canyons}},
volume = {81},
