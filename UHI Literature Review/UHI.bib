journal = {Energy and Buildings},
keywords = {Cooling systems,Energy saving,Green roof,Smart control,Sustainable design, Passive cooling},
pages = {492--504},
publisher = {Elsevier B.V.},
title = {{Comfort and energy savings with active green roofs}},
url = {http://dx.doi.org/10.1016/j.enbuild.2014.07.055},
volume = {82},
year = {2014}
}
@article{Wang2016,
