file = {:Users/carsten/Dropbox/Uni/Books/UHI Papers/Li{\_}2014{\_}Environ.{\_}Res.{\_}Lett.{\_}9{\_}055002.pdf:pdf},
isbn = {1748-9326},
issn = {17489326},
journal = {Environmental Research Letters},
keywords = {WRF,cool roof,green roof,urban canopy model,urban heat island mitigation},
number = {5},
publisher = {IOP Publishing},
title = {{The effectiveness of cool and green roofs as urban heat island mitigation strategies}},
