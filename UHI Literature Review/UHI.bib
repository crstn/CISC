isbn = {03601323},
issn = {03601323},
journal = {Building and Environment},
keywords = {Climbers,Evapo-transpiration,Green fa{\c{c}}ade,Shade,Thermal performance,Wall shrubs},
pages = {198--207},
pmid = {94306906},
publisher = {Elsevier Ltd},
title = {{What's 'cool' in the world of green fa{\c{c}}ades? How plant choice influences the cooling properties of green walls}},
