isbn = {0169-2046},
issn = {01692046},
journal = {Landscape and Urban Planning},
keywords = {Radiation modification,Thermal comfort,Tree shading,Tropical open spaces,Urban tree canopy},
number = {3},
pages = {168--181},
publisher = {Elsevier B.V.},
title = {{A comparison of Mesua ferrea L. and Hura crepitans L. for shade creation and radiation modification in improving thermal comfort}},
